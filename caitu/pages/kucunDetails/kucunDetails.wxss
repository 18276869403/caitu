}

.content-item-right {
  width: 5%;
  text-align: right;
}

.content-item-content1 {
  width: 75%;
  text-align: right;
  font-size: 32rpx;
  color: rgba(140, 140, 140, 1);
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}

.bottom {
  text-align: center;
  margin-top: 110rpx;
  /* margin-bottom: 145rpx; */
}

.picker {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content-item-title {
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  font-size: 38rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  margin-top: 43rpx;
  margin-bottom: 34rpx;
}
.content-item-img{
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  display: flex;
  flex-wrap: wrap
}
.content-item-img-item{
  width: 33.3%;
  text-align: center;
  position: relative
}

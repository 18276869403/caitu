page {
  background: #f5f7fb;
  padding-bottom: 120rpx;
}

.content {
  width: 100%;
  margin-top: 30rpx;
}

.content-item {
  width: 90%;
  margin-left: 3%;
  margin-right: 3%;
  padding-left: 2%;
  padding-right: 2%;
  height: 83rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 2rpx 9rpx 0rpx rgba(4, 40, 100, 0.06);
  border-radius: 15rpx;
  line-height: 83rpx;
  margin-bottom: 20rpx;
}

.enter-img {
  width: 13rpx;
  height: 23rpx;
}

.content-item-left {
  width: 25%;
  text-align: left;
  font-size: 34rpx;
  color: rgba(51, 51, 51, 1);
}

.content-item-content {
  width: 70%;
  text-align: right;
  font-size: 32rpx;
  color: rgba(140, 140, 140, 1);
  overflow: hidden;

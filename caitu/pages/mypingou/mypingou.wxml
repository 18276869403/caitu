<!--pages/mypingou/mypingou.wxml-->
<view class="hengxian"></view>
<view class="myqg" wx:for="{{piugou}}" wx:if="{{piugou.length>0}}" >
  <view class="qiugou" bindtap="pingouDetails" data-pgxx="{{item}}">
    <view class="ming hengxiang">
      <view class="qg_name yincang">{{item.steelname}}</view>
      <view class="daojishi1" wx:if="{{item.startoks_dictText=='进行中'}}">
        <image src="../image/daojishi.png" class="djs_img"></image>
        进行中
      </view>
      <view class="pipeizhong" wx:if="{{item.startoks_dictText=='匹配中'}}">
        <image src="../image/shenhe.png" class="djs_img"></image>
        匹配中
      </view>
      <view class="yiwancheng" wx:if="{{item.startoks_dictText=='已完成'}}">
        <image src="../image/wancheng.png" class="djs_img"></image>
        已完成
      </view>
      <image src="../image/lengyuan.png" class="xz"></image>
      <image src="../image/xingzhuang.png" class="ly"></image>
    </view>
    <view class="qg hengxiang">
      <view class="qg_xq">
        <view class="bianh hengxiang">
          <view>
            <image src="../image/bianhao.png" class="xq_img"></image>
          </view>
          <view class="xq_name">编号：{{item.id}}</view>
        </view>
        <view class="bianh hengxiang">
          <view>
            <image src="../image/guige.png" class="xq_img"></image>
          </view>
          <view class="xq_name">规格：厚{{item.thickness}}/宽{{item.width}}</view>
        </view>
        <view class="bianh hengxiang">
          <view>
            <image src="../image/xinceng.png" class="xq_img"></image>
          </view>
          <view class="xq_name">锌层：{{item.zinclayer}}</view>
        </view>
        <view class="bianh hengxiang">
          <image src="../image/didian.png" class="xq_img"></image>
          <view class="xq_name">地点：{{item.areaOneid_dictText}}/{{item.areaTwoId_dictText}}</view>
        </view>
        <view class="bianh hengxiang">
          <view>
            <image src="../image/biao.png" class="xq_img"></image>
          </view>
          <view class="xq_name">时间：{{item.createtime}}</view>
        </view>
      </view>
      <view class="shu hengxiang"></view>
      <view class="liang">
        <view class="liang_b">
          <text>{{item.tonnage}}</text>吨</view>
      </view>
    </view>
  </view>
</view>
<view class="shuju" wx:if="{{piugou.length==0}}">
  <image src="../image/noshuju.png" class="shuju_img"></image>
  <view>暂无数据</view>
</view>
<!--pages/post/post.wxml-->
<view class="container">
  <view class="hengxian"></view>
  <view class="content">
    <image src="../image/haibaobeijing.png" class="haibao-img"></image>
    <image src="../image/erweima.png" class="code-img"></image>
    <view class="content-text">
      <view class="content-text-title">{{item.theName}}</view>
      <view class="content-text-text-item">厚度：{{item.thickness}}</view>
      <view class="content-text-text-item">宽度：{{item.width}}</view>
      <view class="content-text-text-item">颜色：{{item.color}}</view>
      <view class="content-text-text-item">吨数：{{item.tonnage}}</view>
      <view class="content-text-text-item">厂库: {{item.steelName}}</view>
    </view>
  </view>
  <view class="bottom hengxiang">
    <view class="bottom-left">
      <image src="../image/baocun.png" class="bottom-img"></image>
    </view>
    <view class="bottom-right">
      <image src="../image/fenxiang.png" class="bottom-img"></image>
    </view>
  </view>
</view>